@model IQueryable<FuelQuoteApplication14.Models.Quote>

@{
    ViewBag.Title = "QuoteHistoryView";
    Layout = "~/Views/Client/Client_Layout.cshtml";
}

<html>
<head>
    <title>Fuel quote History</title>
    <style>

        table {
            border-collapse: collapse;
            margin: 30px auto;
            width: 80%;
            height: 30%;

        }

        th, td {
            border: 3px solid green;
            padding-left: 10px;
            padding-top:5px;
            font-size:20px;
        }

        body {
            font-family: Arial, Helvetica, sans-serif;
            
        }
    </style>
</head>
<body>
    <div>
        <img src="logo.png" width="500" height="200" style="display:block;margin-left:auto;margin-right:auto;padding-top:30px;">
    </div>

    <table class="center">
        <tr>
            <th>ID</th>
            <th>Gallons Requested</th>
            <th>Delivery date</th>
            <th>Address</th>
            <th>Total amount</th>
        </tr>

        @if (Model.Count() != 0)
        {
            foreach (var i in Model)
            {

                <tr>
                    <td>@Html.DisplayFor(Modeli => i.Quote_id)</td>
                    <td>@Html.DisplayFor(Modeli => i.Gallons_requested)</td>
                    <td>@Html.DisplayFor(Modeli => i.Delivery_date)</td>
                    <td>@Html.DisplayFor(Modeli => i.Address)</td>
                    <td>@Html.DisplayFor(Modeli => i.Total_amount)</td>
                    @if (i.Delivery_date > DateTime.Now.AddDays(3))
                    {
                        <td>
                            @Html.ActionLink("Remove Quote", "Remove_quote", i)
                        </td>
                    }
                </tr>
            }

        }

    </table>
    @if (Model.Count() == 0)
    {
        <h5 style="text-align:center">No Quotes are generated by you</h5>
    }
</body>
</html>
